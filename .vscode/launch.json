{
  "configurations": [
    {
      "type": "factoriomod",
      "request": "launch",
      "name": "Debug Plugin",
      "modsPath": "${workspaceFolder}/mods",
      "allowDisableBaseMod": true,
      "factorioArgs": [
        "--load-scenario", "JanSharpDevEnv/NoBase",
      ],
      "disableExtraMods": true,
      "adjustMods": {
        "minimal-no-base-mod": true,
        "JanSharpDevEnv": true,
        "TestMod": true,
      },

      "hookControl": true,
      // "hookSettings": true,
      // "hookData": true,
      // "keepOldLog": true,
    },
    {
      "type": "factoriomod",
      "request": "launch",
      "hookMode": "profile",
      "name": "Profile Plugin",
      "modsPath": "${workspaceFolder}/mods",
      "allowDisableBaseMod": true,
      "factorioArgs": [
        "--load-scenario", "JanSharpDevEnv/NoBase",
      ],
      "disableExtraMods": true,
      "adjustMods": {
        "minimal-no-base-mod": true,
        "JanSharpDevEnv": true,
        "TestMod": true,
      },

      "profileSlowStart": 0,
      "profileUpdateRate": 1,
      "profileLines": false,

      // "hookSettings": true,
      // "hookData": true,
      // "keepOldLog": true,
    },
  ]
}